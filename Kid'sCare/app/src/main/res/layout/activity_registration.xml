<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_background"
    android:orientation="vertical"
    tools:context="com.projects_kidscare.Design.RegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/baby2"
            android:layout_gravity="center_horizontal"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>

        <TextView
            android:id="@+id/img_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/dashboard_red"
            android:text="Please Select Image"/>





            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/reg_et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Kid's Name"
                    android:textSize="20dp"
                    android:inputType="textCapWords"
                    android:gravity="center_horizontal"
                    android:nextFocusDown="@+id/reg_tv_dob"
                    android:imeOptions="actionDone"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

        <EditText
            android:id="@+id/reg_tv_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:editable="false"
            android:textSize="20dp"
            android:gravity="center_horizontal"
            android:hint="Select BirthDate"
            android:textColor="@color/black" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
          android:layout_margin="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/reg_btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_click1"
                android:text="SAVE"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/white"/>


            <Button
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:visibility="invisible"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/reg_btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_click1"
                android:text="CANCEL"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/white" />



        </LinearLayout>



    </LinearLayout>


    </LinearLayout>

